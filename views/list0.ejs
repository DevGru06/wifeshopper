<%- include("header") -%>

<main role="main" class="container">

  <div class="">

  </div>
  <!-- search box -->
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="marginBgone card-header" id="headingOne">
        <button class="card-button btn btn-link" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          Search
        </button>
      </div>
      <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
        <div class="marginBgone card-body">
          <form class="marginBgone form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
            <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </div>
    </div>
    <% if(badgelist === null) { %>
    <div class="card">
      <div class="marginBgone card-header" id="headingTwo">
        <h2 class="mb-0">
          <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">Min
          </button>
        </h2>
      </div>
      <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
        <div class="marginBgone card-body">
          <% badgelist.forEach(function(bl) { %>
          <span class="badge badge-primary">
            <%= bl.item %>
            <input class="smBD" type="button" src="sort-26.png" onChange="this.form.submit()"></span>



          <% }); %>
        </div>
      </div>
    </div>
    <% } %>

    <% if(badgelist != null) { %>
    <% badgelist.forEach(function(bl) { %>
    <span class="badge badge-primary">
      <%= bl.item %>
      <input class="smBD" type="button" src="sort-26.png" onChange="this.form.submit()"></span>
    <% }); %>
    <% } %>

    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <%if(useChecked){ %>
          <th class="item-header">
            Add
          </th>
          <% } %>

          <form class="header" action="/list/sortMe" method="post">
            <th class="item">Item
              <button class="btn btn-primary sm" type="submit" name="title" value="1"><img class="img-sm" src="sort-26.png" alt="SomeAlternateText"></button>
            <th class="type" name="col">Type
              <button class="btn btn-primary sm" type="submit" name="title" value="2"><img class="img-sm" src="sort-26.png" alt="SomeAlternateText"></button>
          </form>
        </tr>
      </thead>
      <tbody>
        <% if(list != null) { %>
        <% list.forEach(function(i) { %>
        <% if(!i.checked) { %>
        <tr>
          <form class="useChecked" action="/item/add" method="post">
            <% if( useChecked ) { %>
            <td>
              <input class="inputCheckbox" type="checkbox" name="checkbox" onChange="this.form.submit()" value=<%=i._id %>>
            </td>
            <% } %>
            <%if(useChecked){ %>
            <td>
              <%=i.item%>
            </td>
            <%  } else { %>
            <td>
              <a class="nav-link" href="#">
                <%=i.item%>
              </a>
            </td>
            <%  } %>
            <td>
              <%=i.type%>
            </td>
          </form>
          <% } %>
          <% });} %>
      </tbody>
    </table>
</main><!-- /.container -->

<%- include("footer") -%>
